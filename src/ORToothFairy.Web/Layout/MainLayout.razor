@inherits LayoutComponentBase

<div class="app-layout">
    <!-- Header -->
    <header class="app-header">
        
        <!-- Title -->
        <a href="/" class="app-title">ORToothFairy</a>
        
        <!-- Hamburger Nav -->
        <nav class="app-nav">
            <HamburgerMenu />
        </nav>
    </header>

    <main class="app-main">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                <div style="color: red; padding: 1rem; background: #ffe0e0;">
                    <h3>Error:</h3>
                    <pre>@ex.Message</pre>
                    <pre>@ex.StackTrace</pre>
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        System.Diagnostics.Debug.WriteLine("MainLayout initialized");
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            System.Diagnostics.Debug.WriteLine("MainLayout first render complete");
        }
    }
}