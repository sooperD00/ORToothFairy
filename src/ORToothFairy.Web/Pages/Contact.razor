@page "/contact"
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="contact-container">
    <h1>Contact Us</h1>
    @if (contactType == "hygienist")
    {
        <p>Interested in being listed on ORToothFairy? Fill out the form below and we'll be in touch!</p>
    }
    else
    {
        <p>Have questions or feedback? We'd love to hear from you.</p>
    }
    <div class="contact-form">
        <div class="form-group">
            <label>Your Name</label>
            <input type="text" @bind="name" placeholder="@(contactType == "hygienist" ? "Irene Newman" : "Jane Brightsmile")" />
        </div>
        <div class="form-group">
            <label>Your Email</label>
            <input type="email" @bind="email" placeholder="@(contactType == "hygienist" ? "since1906@example.com" : "jane@example.com")" />
        </div>
        <div class="form-group">
            <label>Subject</label>
            <input type="text" @bind="subject" />
        </div>
        <div class="form-group">
            <label>Message</label>
            <textarea @bind="message" rows="5"></textarea>
        </div>
        <button class="btn-primary" @onclick="SendEmail">Send Message</button>
    </div>
</div>

@code {
    private string contactType = "general";
    private string name = "";
    private string email = "";
    private string subject = "";
    private string message = "";

    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        LoadContactType();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        LoadContactType();
        StateHasChanged();
    }

    private void LoadContactType()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (uri.Query.Contains("type=hygienist"))
        {
            contactType = "hygienist";
            subject = "I'd like to be listed on ORToothFairy";
            message = "Hi! I'm a dental hygienist interested in being listed on ORToothFairy.\n\nMy practice info:\n- Name:\n- License #:\n- Service area:\n- Phone:\n\nThanks!";
        }
        else
        {
            contactType = "general";
            subject = "Question about ORToothFairy";
            message = "";
        }

        name = "";
        email = "";
    }

    private void SendEmail()
    {
        var mailto = $"mailto:hello@ortoothfairy.com" +
            $"?subject={Uri.EscapeDataString(subject)}" +
            $"&body={Uri.EscapeDataString($"From: {name} ({email})\n\n{message}")}";

        NavigationManager.NavigateTo(mailto, true);
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}