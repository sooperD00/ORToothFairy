@page "/individuals-and-families"

@using ORToothFairy.Core.Models

<div class="if-search-page">
    <!-- Hero Section with Background Image -->
    <div class="if-hero" style="background-image: url('images/nathan-anderson-GM5Yn5XRVqA-unsplash.jpg');">
        <div class="if-hero-overlay"></div>
        
        <div class="if-hero-content">
            <h1>Find a Dental Hygienist</h1>
            
            <!-- Educational Triage Card -->
            <div class="if-triage-card">
                <p class="if-triage-intro">
                    Oregon dental hygienists can provide preventive care in many settings ‚Äî 
                    not just dental offices. Search below to find hygienists who:
                </p>
                <ul class="if-triage-list">
                    <li>üè† Make house calls for you or a family member</li>
                    <li>üè• Visit nursing homes and care facilities</li>
                    <li>ü¶∑ Work at dental offices you can visit directly</li>
                    <li>üèõÔ∏è Serve community health centers in underserved areas</li>
                </ul>
                <p class="if-triage-cta">
                    <strong>How it works:</strong> Search by location, browse results, 
                    then contact a hygienist or their facility directly to schedule.
                </p>
            </div>
        </div>
    </div>

    <!-- Search Section -->
    <div class="if-search-section">
        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="if-error">
                <p>‚ö†Ô∏è @errorMessage</p>
            </div>
        }

        <div class="if-search-controls">
            <h2>Search by Location</h2>

            <!-- Location Button -->
            <button class="if-btn-primary" @onclick="UseMyLocation">
                üìç Use My Location
            </button>

            <div class="if-search-divider">
                <span>or</span>
            </div>

            <!-- Zip Code -->
            <div class="if-input-row">
                <input type="text"
                       @bind="zipCode"
                       placeholder="Enter zip code (e.g., 97124)"
                       maxlength="5" />
                <button class="if-btn-secondary" @onclick="SearchByZip">Search</button>
            </div>

            <!-- Address -->
            <div class="if-input-row">
                <input type="text"
                       @bind="address"
                       placeholder="Or enter address" />
                <button class="if-btn-secondary" @onclick="SearchByAddress">Search</button>
            </div>

            <!-- Filters Row -->
            <div class="if-filters">
                <div class="if-filter-item">
                    <label>Distance:</label>
                    <select @bind="maxDistance" @bind:after="OnDistanceChanged">
                        <option value="5">5 miles</option>
                        <option value="10">10 miles</option>
                        <option value="25" selected>25 miles</option>
                        <option value="50">50 miles</option>
                        <option value="999999">All</option>
                    </select>
                </div>

                <!-- Services Filter Placeholder -->
                <div class="if-filter-item if-filter-coming-soon">
                    <label>Services:</label>
                    <select disabled>
                        <option>All services</option>
                    </select>
                    <span class="if-coming-soon-badge">Coming soon</span>
                </div>
            </div>
        </div>

        <!-- Loading State -->
        @if (isLoading)
        {
            <div class="if-loading">
                <div class="if-spinner"></div>
                <p>Searching for practitioners...</p>
            </div>
        }

        <!-- Results -->
        @if (!isLoading && results != null && results.Any())
        {
            <div class="if-results">
                <h2 class="if-results-count">@results.Count hygienist@(results.Count != 1 ? "s" : "") found</h2>

                <div class="if-results-grid">
                    @foreach (var practitioner in results)
                    {
                        <div class="if-practitioner-card">
                            <!-- Name & Distance Header -->
                            <div class="if-card-header">
                                <h3>@practitioner.FirstName @practitioner.LastName</h3>
                                <div class="if-card-header-right">
                                    <button class="if-favorite-btn" @onclick="() => ToggleFavorite(practitioner.PractitionerId)" @onclick:stopPropagation="true">
                                        @(IsFavorite(practitioner.PractitionerId) ? "‚ù§Ô∏è" : "ü§ç")
                                    </button>
                                    <span class="if-card-distance">
                                        @practitioner.UserPractitionerProximityMiles.ToString("F1") mi
                                    </span>
                                </div>
                            </div>

                            <!-- Location -->
                            <p class="if-card-location">
                                @practitioner.City, @practitioner.ZipCode
                            </p>

                            <!-- Services -->
                            @if (practitioner.Services != null && practitioner.Services.Any())
                            {
                                <div class="if-card-services">
                                    @foreach (var service in practitioner.Services.Take(4))
                                    {
                                        <span class="if-service-chip">@service</span>
                                    }
                                    @if (practitioner.Services.Count > 4)
                                    {
                                        <span class="if-service-chip if-service-more">+@(practitioner.Services.Count - 4) more</span>
                                    }
                                </div>
                            }

                            <!-- Contact Actions -->
                            <div class="if-card-actions">
                                @if (practitioner.AcceptsCalls && !string.IsNullOrEmpty(practitioner.Phone))
                                {
                                    <a href="tel:@practitioner.Phone" class="if-action-btn if-action-call">
                                        üìû Call
                                    </a>
                                }
                                @if (practitioner.AcceptsTexts && !string.IsNullOrEmpty(practitioner.Phone))
                                {
                                    <a href="sms:@practitioner.Phone" class="if-action-btn if-action-text">
                                        üí¨ Text
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(practitioner.Email))
                                {
                                    <a href="mailto:@practitioner.Email" class="if-action-btn if-action-email">
                                        ‚úâÔ∏è Email
                                    </a>
                                }
                                <button class="if-action-btn if-action-directions" @onclick="() => OpenMaps(practitioner)">
                                    üó∫Ô∏è Directions
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Empty State -->
        @if (!isLoading && hasSearched && (results == null || !results.Any()))
        {
            <div class="if-empty-state">
                @if (maxDistance < 999999)
                {
                    <p>No hygienists found within @maxDistance miles.</p>
                    <p>Try increasing the distance filter above.</p>
                }
                else
                {
                    <p>No hygienists found in this area.</p>
                    <p>
                        Contact the <a href="https://www.odha.org" target="_blank">Oregon Dental Hygienists' Association</a> 
                        for help finding care.
                    </p>
                }
            </div>
        }
    </div>
</div>

@code {
    [Inject] private SearchService SearchService { get; set; } = default!;

    // Search state
    private string zipCode = "";
    private string address = "";
    private int maxDistance = 25;
    private bool isLoading = false;
    private bool hasSearched = false;
    private string? errorMessage;

    // Results
    private List<PractitionerSearchResult>? results;
    private List<PractitionerSearchResult>? allResults;

    // For re-running searches on filter change
    private string lastZipCode = "";
    private string lastAddress = "";
    private double? lastLat;
    private double? lastLon;

    private async Task UseMyLocation()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            StateHasChanged();

            var status = await Permissions.CheckStatusAsync<Permissions.LocationWhenInUse>();
            if (status != PermissionStatus.Granted)
            {
                status = await Permissions.RequestAsync<Permissions.LocationWhenInUse>();
            }

            if (status != PermissionStatus.Granted)
            {
                errorMessage = "Location permission denied. Please enable location access or use zip/address.";
                return;
            }

            var request = new GeolocationRequest(GeolocationAccuracy.Medium, TimeSpan.FromSeconds(10));
            var location = await Geolocation.GetLocationAsync(request);

            if (location == null)
            {
                errorMessage = "Unable to get your location. Please try zip code or address.";
                return;
            }

            // Store for filter changes
            lastLat = location.Latitude;
            lastLon = location.Longitude;
            lastZipCode = "";
            lastAddress = "";

            allResults = await SearchService.SearchByCoordinatesAsync(
                location.Latitude,
                location.Longitude,
                maxDistance);

            results = allResults;
            hasSearched = true;
        }
        catch (FeatureNotSupportedException)
        {
            errorMessage = "Geolocation is not supported on this device.";
        }
        catch (PermissionException)
        {
            errorMessage = "Location permission was denied.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error getting location: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchByZip()
    {
        if (string.IsNullOrWhiteSpace(zipCode) || zipCode.Length != 5)
        {
            errorMessage = "Please enter a valid 5-digit zip code.";
            return;
        }

        try
        {
            isLoading = true;
            errorMessage = null;
            hasSearched = true;
            lastZipCode = zipCode;
            lastAddress = "";
            lastLat = null;
            lastLon = null;
            StateHasChanged();

            allResults = await SearchService.SearchByZipCodeAsync(zipCode, maxDistance);
            results = allResults;
        }
        catch (Exception ex)
        {
            errorMessage = $"Search failed: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SearchByAddress()
    {
        if (string.IsNullOrWhiteSpace(address))
        {
            errorMessage = "Please enter an address.";
            return;
        }

        try
        {
            isLoading = true;
            errorMessage = null;
            hasSearched = true;
            lastAddress = address;
            lastZipCode = "";
            lastLat = null;
            lastLon = null;
            StateHasChanged();

            allResults = await SearchService.SearchByAddressAsync(address, maxDistance);
            results = allResults;
        }
        catch (Exception ex)
        {
            errorMessage = $"Search failed: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnDistanceChanged()
    {
        if (!hasSearched) return;

        // Re-run last search with new distance
        if (!string.IsNullOrEmpty(lastZipCode))
        {
            zipCode = lastZipCode;
            await SearchByZip();
        }
        else if (!string.IsNullOrEmpty(lastAddress))
        {
            address = lastAddress;
            await SearchByAddress();
        }
        else if (lastLat.HasValue && lastLon.HasValue)
        {
            // Re-run geolocation search
            try
            {
                isLoading = true;
                StateHasChanged();

                allResults = await SearchService.SearchByCoordinatesAsync(
                    lastLat.Value,
                    lastLon.Value,
                    maxDistance);
                results = allResults;
            }
            finally
            {
                isLoading = false;
                StateHasChanged();
            }
        }
    }

    private async Task OpenMaps(PractitionerSearchResult p)
    {
        try
        {
            await Launcher.OpenAsync($"https://maps.google.com/?daddr={p.Latitude},{p.Longitude}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Couldn't open maps: {ex.Message}";
            StateHasChanged();
        }
    }

    // Add these to your @code section in IndividualsAndFamiliesSearch.razor:

    private HashSet<int> favoritePractitionerIds = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadFavorites();
    }

    private async Task LoadFavorites()
    {
        // Load from MAUI Preferences (persists across app sessions)
        var stored = Preferences.Get("favorite_practitioners", "");
        if (!string.IsNullOrEmpty(stored))
        {
            favoritePractitionerIds = stored
                .Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(int.Parse)
                .ToHashSet();
        }
    }

    private async Task ToggleFavorite(int practitionerId)
    {
        if (favoritePractitionerIds.Contains(practitionerId))
        {
            favoritePractitionerIds.Remove(practitionerId);
        }
        else
        {
            favoritePractitionerIds.Add(practitionerId);
        }

        // Save to local storage
        Preferences.Set("favorite_practitioners", string.Join(",", favoritePractitionerIds));

        // TODO (post-MVP): Ping API for aggregate stats
        // await Http.PostAsync($"api/practitioners/{practitionerId}/heart", null);

        StateHasChanged();
    }

    private bool IsFavorite(int practitionerId) => favoritePractitionerIds.Contains(practitionerId);
}
